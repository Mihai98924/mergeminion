{
    "display_information": {
        "name": "MergeMinion",
        "description": "GitLab Merge Request Helper",
        "background_color": "#750000"
    },
    "features": {
        "app_home": {
            "home_tab_enabled": true,
            "messages_tab_enabled": false,
            "messages_tab_read_only_enabled": true
        },
        "bot_user": {
            "display_name": "mergeminion",
            "always_online": false
        }
    },
    "oauth_config": {
        "scopes": {
            "user": [
                "identity.basic"
            ],
            "bot": [
                "channels:history",
                "channels:read",
                "chat:write",
                "groups:history",
                "incoming-webhook",
                "users:read.email",
                "users:read",
                "app_mentions:read"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "request_url": "using socket mode, unnecessary",
            "bot_events": [
                "app_mention",
                "team_join",
                "user_change"
            ]
        },
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
}